import PyPDF2

def find_sentence_in_pdf(pdf_path, sentence):
    # Open the PDF file
    with open(pdf_path, 'rb') as file:
        reader = PyPDF2.PdfReader(file)
        # Iterate over each page
        for page_num in range(len(reader.pages)):
            page = reader.pages[page_num]
            page_text = page.extract_text()
            # Check if the sentence is in the text of the page
            if sentence in page_text:
                print(f"Sentence found on page {page_num + 1}")
                return page_num + 1
    print("Sentence not found in the PDF.")
    return None

# Example usage
pdf_path = 'your_pdf_file.pdf'
sentence = 'The specific sentence you are looking for.'
find_sentence_in_pdf(pdf_path, sentence)
